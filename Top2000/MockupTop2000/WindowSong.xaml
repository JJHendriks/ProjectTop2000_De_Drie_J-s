<Window x:Class="MockupTop2000.WindowSong"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MockupTop2000"
        mc:Ignorable="d"
         Title="WindowSong" Height="700" Width="600">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="#FFF6C3C3" Offset="1"/>
                <GradientStop Color="#FF730D0D" Offset="0.339"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Image x:Name="Top2000Logo_png" Margin="48,5,350.6,626.4" Source="Top2000Logo.png"/>
        <Button x:Name="button_Copy" Content="Wijzigen" HorizontalAlignment="Left" Margin="288,48,0,0" VerticalAlignment="Top" Width="91" Height="40"/>
        <Button x:Name="button_Copy1" Content="Nieuw" HorizontalAlignment="Left" Margin="48,48,0,0" VerticalAlignment="Top" Width="91" Height="40"/>
        <Label Content="Naam van artiest:" HorizontalAlignment="Left" Margin="48,122,0,0" VerticalAlignment="Top" Width="104" Height="26" Foreground="White"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="152,122,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="193"/>
        <Label Content="Naam van lied:" HorizontalAlignment="Left" Margin="63,154,0,0" VerticalAlignment="Top" Width="89" Height="26" Foreground="White"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="152,154,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="193"/>
        <Label Content="Jaar van lied:" HorizontalAlignment="Left" Margin="75,185,0,0" VerticalAlignment="Top" Width="77" Height="26" Foreground="White"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="152,185,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="193"/>
        <Label Content="Songtext:" HorizontalAlignment="Left" Margin="86,216,0,0" VerticalAlignment="Top" Width="61" Height="26" Foreground="White"/>
        <TextBox HorizontalAlignment="Left" Height="446" Margin="152,213,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="337"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="26" Margin="396,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="396,48,0,0" VerticalAlignment="Top" Width="168" BorderThickness="1" Height="26"/>

    </Grid>
</Window>
