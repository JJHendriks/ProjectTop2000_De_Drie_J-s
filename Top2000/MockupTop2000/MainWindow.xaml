<Window x:Class="MockupTop2000.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MockupTop2000"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="854">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="#FFF6C3C3" Offset="1"/>
                <GradientStop Color="#FFEA4D4D" Offset="0.339"/>
            </LinearGradientBrush>
        </Grid.Background>
        <DataGrid x:Name="dgToplist" HorizontalAlignment="Center" Margin="54,94,44,0" VerticalAlignment="Top" Width="748" Height="560" AlternatingRowBackground="#FFEA4D4D"  AlternationCount="2" BorderBrush="Black" RowBackground="#FFF0B6B6" FontSize="15">
            <DataGrid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFF6C3C3" Offset="1"/>
                    <GradientStop Color="#FFEA4D4D" Offset="0.339"/>
                </LinearGradientBrush>
            </DataGrid.Background>
        </DataGrid>
        <ComboBox x:Name="cbYear" IsReadOnly="True" HorizontalAlignment="Left" Margin="292,29,0,0" VerticalAlignment="Top" Width="140" BorderThickness="1" Height="26" SelectionChanged="cbYear_SelectionChanged"/>
        <TextBox x:Name="tbSearch" HorizontalAlignment="Left" Height="26" Margin="484,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="218" TextChanged="tbSearch_TextChanged" />
        <Image x:Name="Top2000Logo_png" Margin="26,10,574,623" Source="Top2000Logo.png" Stretch="Fill"/>
        <Image x:Name="gear_295455_960_720_png" Margin="745,10,10,623" Source="gear-295455_960_720.png" Stretch="Fill" ToolTip="opties" Cursor="Hand" MouseLeftButtonDown="options_click"/>

    </Grid>
</Window>
